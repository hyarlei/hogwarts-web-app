{
  "name": "harry-potter-frontend",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "axios": "^1.6.0",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.1.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "bash build.sh",
    "build:vercel": "chmod +x build.sh && bash build.sh",
    "build:render": "chmod +x node_modules/.bin/* && chmod +x node_modules/@esbuild/*/bin/* && node node_modules/vite/bin/vite.js build",
    "build:direct": "./node_modules/.bin/vite build",
    "build:simple": "vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "fix-permissions": "find node_modules/.bin -type f -exec chmod +x {} + 2>/dev/null || true && find node_modules -name 'esbuild' -type f -exec chmod +x {} + 2>/dev/null || true",
    "postinstall": "npm run fix-permissions"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
