{
  "name": "harry-potter-backend",
  "version": "1.0.0",
  "description": "Backend API para aplicação do universo Harry Potter",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx prisma generate && npx tsc",
    "build:safe": "npx prisma generate && ./node_modules/.bin/tsc || node_modules/typescript/bin/tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "start:prod": "npm run db:generate && npm run db:deploy && npm run db:seed:prod && npm start",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:seed": "ts-node src/seed.ts",
    "db:seed:prod": "node -r ts-node/register src/seed.ts",
    "db:studio": "prisma studio",
    "build:render": "npm run db:generate && npm run build"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@vercel/node": "^3.0.0",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
  }
}
